{
    // 编译选项
    "compilerOptions": {
        // 指定输出的es版本
        "target": "esnext",
        // 指定采用的模块系统
        "module": "esnext",
        // 启用所有严格类型检查选项
        "strict": true,
        // 在 .tsx文件里支持JSX
        "jsx": "preserve",
        // 从 tslib 导入辅助工具函数
        "importHelpers": true,
        // 指定模块解析方式
        "moduleResolution": "node",
        // 启用实验性的ES装饰器
        "experimentalDecorators": true,
        // 生成的文件会为兼容babel而添加__importStar和__importDefault的helper
        "esModuleInterop": true,
        // 允许从没有设置默认导出的模块中默认导入
        "allowSyntheticDefaultImports": true,
        // 是否生成 .map 文件
        "sourceMap": true,
        // 解析非相对模块名的基准目录
        "baseUrl": ".",
        // 启用严格的 null 检查
        "strictNullChecks": false,
        // 以严格模式解析每个模块并加入 'use strict'
        "alwaysStrict": true,
        // 禁止this 值为 any
        "noImplicitThis": true,
        // 禁止定义了但未使用的变量
        "noUnusedLocals": true,
        // 禁止定义了但未使用的参数
        "noUnusedParameters": true,
        // 要包含的类型声明文件名列表
        "types": [
            "webpack-env",
            "jest"
        ],
        // 模块名到基于 baseUrl的路径映射的列表,配合webpack的alias配置
        "paths": {
            "@/*": [
                "src/*"
            ],
            "utils/*": [
                "src/utils/*"
            ]
        },
        // 编译过程中需要引入的库文件的列表
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    // 编译包含的文件路径列表
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx"
    ],
    // 编译排除的文件路径列表
    "exclude": [
        "node_modules"
    ]
}